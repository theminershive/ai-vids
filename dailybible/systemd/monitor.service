[Unit]
Description=dailybible health monitor
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/home/trilobyte/ai/dailybible
EnvironmentFile=/home/trilobyte/ai/dailybible/.env
ExecStart=/usr/bin/env python3 monitor_server.py
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
