[Unit]
Description=mod comment bot
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/home/trilobyte/ai/mod
EnvironmentFile=/home/trilobyte/ai/mod/.env
ExecStart=/usr/bin/env python3 comment.py
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
